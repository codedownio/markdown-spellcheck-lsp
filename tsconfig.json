{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es6",
    "incremental": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
